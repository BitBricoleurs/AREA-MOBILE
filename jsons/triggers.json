              {
                "name": "timeEntry",
                "sectionTitle": "",
                "variableName": "time",
                "default": "current",
                "label": "Time of day",
                "required": "true"
              }
            ]
          },
          {
            "sectionTitle": "Repeat",
            "block": [
              {
                "name": "choice",
                "variableName": "repeat",
                "type": "Single",
                "placeholder": "",
                "label": "",
                "required": "true",
                "options": [
                  {
                    "label": "Once",
                    "reveal": "Calendar",
                    "variableName": "date"
                  },
                  {
                    "label": "Daily",
                    "reveal": ""
                  },
                  {
                    "label": "Weekly",
                    "reveal": "Weekdays",
                    "variableName": "weekdays"
                  },
                  {
                    "label": "Monthly",
                    "reveal": "Calendar",
                    "variableName": "date"
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
